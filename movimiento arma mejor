#ayuda

#Player
#└ Arm [Node2D]
#  └ Weapon [Sprite2D]

@onready var _arm : Node2D = $Arm
@onready var _weapon : Sprite2D = $Arm/Weapon

func _process(delta : float) -> void:
    var target_position := get_global_mouse_position()
    _arm.look_at(target_position)
    _weapon.flip_h = target_position.x < global_position.x

https://forum.godotengine.org/t/object-follow-mouse-in-radius/8185/2
